%h3.heading Settings
= semantic_form_for [:dashboard, current_account], :url => 'settings' do |f|
    
  = f.inputs 'Personal' do
    = f.input :first_name
    = f.input :last_name
    = f.input :email, :as => :email
    = f.input :phone, :hint => 'Ex: (555) 555-5555'
    = f.input :internal_agent_nrds_id
    = f.input :settings_featured_listings, :collection => Listing.all.map { |listing| [truncate("#{listing.listing} - #{listing.location.address_1}", :length => 35), listing.id]}, :include_blank => false, :input_html => {:class => 'select2', :multiple => 'multiple'}
    = f.input :settings_search_min, :collection => default_prices, :include_blank => false, :input_html => {:class => 'select2'}
    = f.input :settings_search_max, :collection => default_prices, :include_blank => false, :input_html => {:class => 'select2'}
    
    = f.input :logo, :as => :file, :hint => image_tag(current_account.logo.thumb.url) if current_account.logo
    = f.input :avatar, :as => :file, :hint => image_tag(current_account.avatar.thumb.url) if current_account.avatar


    = f.semantic_fields_for :location do |location|
      = location.input :address_1
      = location.input :address_2
      = location.input :city
      = location.input :state, :collection => us_states, :include_blank => false, :input_html => {:class => 'select2'}
      = location.input :zip
  
  = f.inputs 'Site Settings' do
    = f.input :subdomain
    = f.input :settings_site_title
  
    
    

    


    

  = f.actions do
    = f.action :submit, :as => :input