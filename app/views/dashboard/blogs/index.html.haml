.page
  .header
    .links
      = link_to 'New Blog', new_dashboard_blog_path, :class => 'btn btn-primary pull-right'
      = link_to 'Delete Blog', new_dashboard_blog_path, :class => 'btn btn-danger pull-right'
      = link_to 'View All Blogs', new_dashboard_blog_path, :class => 'btn btn-regular pull-right'
    .title
      Blog Posts
      
  .content

    %table.table.table-bordered
      %thead
        %tr
          %th Title
          %th Comments
          %th Views
          %th Created
          %th Updated
          %th.action_row Actions

      %tbody
        - @blogs.each do |blog|
          %tr
            %td= blog.title
            %td
              = link_to blog.comments.length, dashboard_manage_comments_path(blog)
            %td= blog.views
            %td
              = blog.created_at.strftime("%m/%d/%Y %l:%M %P")
            %td
              = blog.updated_at.strftime("%m/%d/%Y %l:%M %P")

            %td
              %i.icon-adt_trash
              = link_to 'Edit', edit_dashboard_blog_path(blog)
              = link_to 'Destroy', dashboard_blog_path(blog), :confirm => 'Are you sure?', :method => :delete
    = link_to '< Go back', dashboard_blogs_path(@blog)

